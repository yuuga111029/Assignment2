<body class="vsc-initialized" data-new-gr-c-s-check-loaded="14.1115.0" data-gr-ext-installed="">
<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @lists.each do |list| %>

    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>
      <td><%=link_to "Show", list_path(list.id) %></td>
      <td><%= link_to "Edit", edit_list_path(list.id) -%></td>
      <td><%= link_to "Destroy", list_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>

  <% end %>

  </tbody>

</table>


<h2>New book</h2>

<% if @list.errors.any? %>
  <div id="error_explanation">
    <h2><%= @list.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


 <!--form_withにオプション追記 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>

<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>

  <br><br>


  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>

  <br><br>

  <%= f.submit 'Create Book' %>

<% end %>